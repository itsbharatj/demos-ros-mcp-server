<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="VU-8">
  <xacro:property name="M_PI" value="3.1415926535897931" />

  <xacro:macro name="lidar-x" params="
    *origin
    parent:=base_link
    name:=leddar
    topic:=/lidar_points
    gz_topic:=lidar
    hz:=10
    lasers:=8
    samples:=1875
    collision_range:=0.3
    min_range:=0.1
    max_range:=130.0
    noise:=0.008
    min_horizontal_angle:=-3.14159
    max_horizontal_angle:=3.14159
    min_vertical_angle:=-0.523599
    max_vertical_angle:=0.523599
    gpu:=true">

    <joint name="${name}_base_mount_joint" type="fixed">
      <xacro:insert_block name="origin" /> 
      <parent link="${parent}"/>
      <child link="${name}_base_link"/>
    </joint>

    <link name="${name}_base_link">
      <inertial>
        <mass value="1e-2"/>
        <origin xyz="0 0 0.03585"/>
        <inertia ixx="1e-2" ixy="0" ixz="0" iyy="1e-2" iyz="0" izz="1e-2"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://velodyne_description/meshes/VLP16_base_1.dae" />
        </geometry>
      </visual>
      <visual>
        <geometry>
          <mesh filename="package://velodyne_description/meshes/VLP16_base_2.dae" />
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0.03585"/>
        <geometry>
          <cylinder radius="0.0516" length="0.0717"/>
        </geometry>
      </collision>
    </link>

    <link name="rotating_${name}">
      <inertial>
        <mass value="1e-2"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="1e-2" ixy="0" ixz="0" iyy="1e-2" iyz="0" izz="1e-2"/>
      </inertial>
      <visual>
        <origin xyz="0 0 -0.0377" />
        <geometry>
          <mesh filename="package://velodyne_description/meshes/VLP16_scan.dae" />
        </geometry>
      </visual>
    </link>

    <joint name="${name}_base_scan_joint" type="revolute" >
      <origin xyz="0 0 0.0377" rpy="0 0 0" />
      <parent link="${name}_base_link" />
      <child link="rotating_${name}"/>
      <limit effort="10.0" lower="-0.5" upper="0.5" velocity="0.1"/>
      <axis xyz="0 0 1" />
    </joint>

    <!-- ros2_control for joint control in Gazebo Fortress -->
    <ros2_control name="${name}_control" type="system">
      <hardware>
        <plugin>gz_ros2_control/GazeboSimSystem</plugin>
      </hardware>
      <joint name="${name}_base_scan_joint">
        <command_interface name="effort">
          <param name="min">-10.0</param>
          <param name="max">10.0</param>
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
    </ros2_control>

    <!-- Gazebo Fortress GPU Lidar sensor -->
    <gazebo reference="rotating_${name}">
      <sensor type="gpu_lidar" name="${name}-VU8">
        <pose>0 0 0 0 0 0</pose>
        <visualize>false</visualize>
        <update_rate>${hz}</update_rate>
        <always_on>true</always_on>
        <topic>${gz_topic}</topic>
        <gz_frame_id>rotating_${name}</gz_frame_id>
        <lidar>
          <scan>
            <horizontal>
              <samples>${samples}</samples>
              <resolution>1</resolution>
              <min_angle>${min_horizontal_angle}</min_angle>
              <max_angle>${max_horizontal_angle}</max_angle>
            </horizontal>
            <vertical>
              <samples>${lasers}</samples>
              <resolution>1</resolution>
              <min_angle>${min_vertical_angle}</min_angle>
              <max_angle>${max_vertical_angle}</max_angle>
            </vertical>
          </scan>
          <range>
            <min>${min_range}</min>
            <max>${max_range}</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>${noise}</stddev>
          </noise>
        </lidar>
      </sensor>
    </gazebo>

    <!-- Gazebo Fortress ros2_control plugin -->
    <gazebo>
      <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
        <parameters>$(find velodyne_gazebo_plugins)/config/velodyne_controller_ros2.yaml</parameters>
      </plugin>
    </gazebo>

  </xacro:macro>
</robot>
